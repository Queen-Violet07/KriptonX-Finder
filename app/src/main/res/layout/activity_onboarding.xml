<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">


    <ImageView
        android:id="@+id/cyan_image"
        android:layout_width="415dp"
        android:layout_height="900dp"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cyan_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.639" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/explore"
        android:layout_width="325dp"
        android:layout_height="123dp"
        android:elevation="2dp"
        android:src="@drawable/explore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/secrets"
        android:layout_width="418dp"
        android:layout_height="258dp"
        android:elevation="2dp"
        android:src="@drawable/secrets"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.183" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_astraunaut"
        android:layout_width="398dp"
        android:layout_height="284dp"
        android:layout_marginBottom="144dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore"
        app:layout_constraintVertical_bias="0.262"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/cyan_earth" />




</androidx.constraintlayout.widget.ConstraintLayout>